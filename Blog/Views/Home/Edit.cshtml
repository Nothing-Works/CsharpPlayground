@model Post

<div>
    <form method="post" asp-controller="Home" asp-action="Edit">
        <input asp-for="Id" type="hidden" />
        <div>
            <label asp-for="Title">Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label asp-for="Body">Body</label>
            <input asp-for="Body" />
        </div>

        <button type="submit">Submit</button>
    </form>
</div>
@model IEnumerable<Post>
<h2>Home Page!</h2>

<div>
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">@post.Title</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Remove" asp-route-id="@post.Id">Delete</a>
            </li>
        }
    </ul>
</div>
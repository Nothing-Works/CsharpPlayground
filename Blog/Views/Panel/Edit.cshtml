@model PostViewModel

<div>
    <form method="post" asp-controller="Panel" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label asp-for="Title">Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label asp-for="Body">Body</label>
            <input asp-for="Body" />
        </div>
        <div>
            <label asp-for="Image">Image</label>
            <input asp-for="Image" />
        </div>

        <button type="submit">Submit</button>
    </form>
</div>
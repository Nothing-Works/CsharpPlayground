@model PostViewModel

<div>
    <form method="post" asp-controller="Panel" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label asp-for="Title">Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label asp-for="Body">Body</label>
            <textarea asp-for="Body" id="editor"></textarea>
        </div>
        <div>
            <label asp-for="Description">Description</label>
            <input asp-for="Description" />
        </div>
        <div>
            <label asp-for="Tags">Tags</label>
            <input asp-for="Tags" />
        </div>
        <div>
            <label asp-for="Category">Category</label>
            <select asp-for="Category">
                <option value="travel">Travel</option>
                <option value="progarmming">Programming</option>
                <option value="photograph">Photograph</option>
            </select>
        </div>
        <div>
            <label asp-for="Image">Image</label>
            <input asp-for="Image" />
        </div>

        <button type="submit">Submit</button>
    </form>
</div>

@section scripts{
    <script>
        $('#editor').trumbowyg()
    </script>
}